generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id @default(uuid())
  userName   String     @unique
  email      String     @unique
  password   String
  role       userRole
  status     userStatus @default(ACTIVE)
  createdAt  DateTime   @default(now())
  upodatedAt DateTime   @updatedAt

  @@map("users")
}

model project {
  id               String @id @default(uuid())
  title            String
  des              String
  img              String
  link             String
  githubClientLink String
  githubServerLink String
  liveSite         String

  @@map("projects")
}

enum userRole {
  SUPPER_ADMIN
  ADMIN
  USER
}

enum userStatus {
  ACTIVE
  BLOCKED
  DELETED
}
